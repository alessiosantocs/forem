<%= form_for(Settings::General.new,
             url: admin_settings_general_settings_path,
             html: { data: { action: "submit->config#updateConfigurationSettings" } }) do |f| %>
  <details class="crayons-card">
    <summary class="crayons-subtitle-2 p-6">Custom Scripts</summary>
    <div class="p-6 pt-0">
      <fieldset class="grid gap-4">
        <div class="crayons-field">
          <%= admin_config_label :custom_scripts_header, "Custom Scripts in <head></head>" %>
          <%= admin_config_description Constants::Settings::General.details[:custom_scripts_header][:description] %>
          <%= f.text_area :custom_scripts_header,
                           class: "crayons-textfield",
                           value: Settings::General.custom_scripts_header %>
        </div>
      </fieldset>
      <%= render "update_setting_button", f: f %>
    </div>
  </details>
<% end %>
